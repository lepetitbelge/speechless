<h2>Add a new speaker!</h2>

<div class="container">
  <div class="row">
    <div class="col-xs col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">
      <%= simple_form_for @speaker do |f| %>
        <%= f.input :first_name %>
        <%= f.input :last_name %>
        <%= f.input :date_of_birth %>
        <%= f.input :date_of_death %>
        f.submit 'Create', class: 'btn btn-primary', method: :post
      <% end %>
    </div>
  </div>
</div>