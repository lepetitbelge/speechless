<%= render 'shared/navbar' %>
<div class="container">
  <div class="row">
    <div class="col-xs-12 col-md-10 col-md-offset-1">
      <div class="speaker-banner margin-t-20">
        <div class="speaker-photo" style="background-image: url(<%= cl_image_path @speaker.photo %>)"></div>
        <div>
          <h1 style="margin-top: 0"><%= @speaker.full_name %></h1>
          <% if @speaker.date_of_birth && @speaker.date_of_death %>
            <p><%= "#{@speaker.date_of_birth} - #{@speaker.date_of_death}" %></p>
          <% elsif @speaker.date_of_birth %>
            <p>born <%= @speaker.date_of_birth %></p>
          <% elsif @speaker.date_of_death %>
            <p>died <%= @speaker.date_of_death %></p>
          <% end %>
          <% if @info_summary %>
            <p><%= @info_summary.html_safe %></p>
          <% end %>
        </div>
        <div class="stats">
          <p><i class="far fa-comment-alt"></i> <%= @speaker.total_stats[:contributions] %></p>
          <p><i class="far fa-comment"></i> <%= @speaker.total_stats[:comments] %></p>
          <p><i class="fas fa-sort voting-item"></i> <%= @speaker.total_stats[:votes] %></p>
        </div>
      </div>
    </div>
  </div>
</div>


<h2>Speeches of this speaker:</h2>
<ul>
  <% @speeches.each do |speech| %>
    <li>
      <%= link_to speech.title, speech_path(speech) %>
    </li>
  <% end %>
</ul>
