<%= render 'shared/navbar' %>
<%= render 'components/search_page_banner' %>

<% if @results.nil? %>
  <div class="container">
    <div class="row">
      <div class="col-xs-8 col-xs-offset-2">
        <% @speeches.each do |speech| %>
          <%= render "components/speech_card", speech: speech %>
        <% end %>
      </div>
    </div>
  </div>
  <h4>Speakers:</h4>
  <ul>
    <% @speakers.each do |speaker| %>
      <%= render "components/speaker_card", speaker: speaker %>
    <% end %>
  </ul>
<% else %>

  <% @results.each do |result| %>
    <%= result.searchable %>
  <% end %>
<% end %>




