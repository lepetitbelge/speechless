<%= render 'shared/navbar' %>
<%= render 'components/search_page_banner' %>

<% if @results.nil? %>
  <div class="container">
    <div class="row">
      <div class="col-xs-6 col-xs-offset-1">
        <div>
          <% @speeches.each do |speech| %>
            <%= render "components/speech_card", speech: speech %>
          <% end %>   
        </div>
      </div>
      <div class="col-xs-3">
        <div class="speaker-cards-container">
          <% @speakers.each do |speaker| %>
            <%= render "components/speaker_card", speaker: speaker %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
<% else %>

  <% @results.each do |result| %>
    <%= result.searchable %>
  <% end %>
<% end %>




