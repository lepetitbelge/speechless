<div class="text-center">
  <h2>Speech show page</h2>
</div>

<div class="text-center">
  <p>Title: <%= @speech.title %></p>
  <p>Category: <%= @speech.category %></p>
  <p>Content: <%= speech.content %></p>
</div>

<div class="text-center">
  <%= link_to 'index', speeches_path, class: 'btn btn-primary' %>
  <%= link_to 'edit', edit_admin_speech_path(@speech), class: 'btn btn-primary' %>
  <%= link_to 'delete', admin_speech_path(@speech), method: :delete, class: 'btn btn-primary' %>
</div>
