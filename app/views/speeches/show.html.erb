<%= render 'shared/navbar' %>
<%= render 'components/show_page_banner' %>

<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <h2 class="show-page-title">
        <%= @speech.title %>
      </h2>
      <div class="speech-and-contributions">
        <div class="speech-background speech-text text-justify">
          <p><%= @speech.content.html_safe %></p>
        </div>
        <div class="thread">
          <% if @speech.contributions %>
            <% @speech.contributions.each do |contribution| %>
              <%= render "components/thread", contribution: contribution %>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- MODEL TEST -->
<div class="modal fade new_contribution hidden" id="modalContactForm" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-body mx-3">
        <div class="md-form">
          <%= simple_form_for [@speech, @contribution] do |f| %>
            <%= f.input :selection_uui, as: :hidden %>
            <%= f.input :paragraph, as: :hidden %>
            <%= hidden_field_tag :speech_html %>
            <%= f.input :content, input_html: { rows: 5 } %>

            <%= f.submit %>
          <% end %>
          <i class="fas fa-pencil prefix grey-text"></i>
          <label data-error="wrong" data-success="right" for="form8">Your contribution</label>
          <textarea type="text" id="form8" class="md-textarea form-control" rows="4"></textarea>
        </div>
      </div>
      <div class="modal-footer d-flex justify-content-center">
        <button class="btn btn-unique">Submit <i class="fas fa-paper-plane-o ml-1"></i></button>
      </div>
    </div>
  </div>
</div>
<div class="text-center">
  <a href="" class="btn btn-default btn-rounded mb-4" data-toggle="modal" data-target="#modalContactForm">Launch
    Modal Contact Form</a>
</div>
<!-- END OF MODAL TEST -->
<div>
  <%= link_to 'index', speeches_path, class: 'btn btn-primary' %>
</div>
