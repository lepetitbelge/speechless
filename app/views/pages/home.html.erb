<%= render 'shared/navbar' %>
<div class="container">
    <div class="row">
      <div class="col-xs-8 col-md-5 col-md-offset-1">
        <div>
          <div class="card_header">
            <h4>All Time Greatest Speeches</h4>
          </div>
          <% @all_time_speeches.each do |speech| %>
            <%= render "components/speech_card", speech: speech %>
          <% end %>   
        </div>
      </div>
      <div class="col-xs-8 col-md-5">
        <div>
          <div class="card_header">
            <h4>Trending Speeches</h4>
          </div>
          <% @trending_speeches.each do |speech| %>
            <%= render "components/speech_card", speech: speech %>
          <% end %>   
        </div>
      </div>
    </div>
  </div>



  <h2>Learn from the great, one speech at a time!</h2>
<div class="search-bar border-r3">
  <%= form_tag speeches_path, method: :get do %>
    <%= text_field_tag :query,
      params[:query],
      class: "form-control search-bar-text",
      placeholder: "Search for a speech or a speaker..."
    %>
  <% end %>
</div>
