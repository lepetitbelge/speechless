<div class="tryout" style="height: 50px;width: 100%;background-color: white;"></div>
<div class="navbar-lewagon">
  <div class="nav-search">
    <%= form_tag speeches_path, method: :get do %>
      <%= text_field_tag :query,
        params[:query],
        class: "form-control nav-search-bar",
        placeholder: "Search"
      %>
    <% end %>
  </div>
  <div class="">
    <%= link_to 'Speechless', root_path, class: 'logo' %>
  </div>
  <div class="navbar-lewagon-actions d-none d-sm-flex">
    |
    <%= link_to "Browse speeches", speeches_path, class: "navbar-lewagon-link" %>
    |
    <%= link_to "Dashboard", '#', class: "navbar-lewagon-link" %>
    |
    <div class="badge-container">
    </div>
    <div class="dropdown">
      <img src='https://res.cloudinary.com/lepetitbelge/image/upload/v1550691453/photo-lily-467004-unsplash.jpg' class="job-card-avatar dropdown-toggle" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"/>
        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
          <% if current_user %>
            <a class="dropdown-item" href="/profile"><i class="fas fa-user"></i> Account</a>
            <a class="dropdown-item" data-method="delete" href="/users/sign_out"><i class="fas fa-sign-out-alt"></i> Log out</a>
          <% else %>
            <a class="dropdown-item" href="/profile"><i class="fas fa-user"></i> Log in</a>
          <% end %>
        </div>
     </div>
  </div>
</div>
