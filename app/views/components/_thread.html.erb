<div class="thread-contribution classic-card-style-no-hover padding-t-10">
  <div class="contribution-contributor padding-lr-5">
    <div class="contributor-avatar user-avatar-extra-small">
      <%= image_tag "#{contribution.user.photo_url}", class: "user-avatar-extra-small" %>
    </div>
    <div class="contributor-details">
      <p class="contribution-username"><%= contribution.user.username %></p>
      <p class="contribution-date"><%= contribution.created_at.strftime("%d.%m.%Y") %></p>
    </div>
  </div>
  <div class="contribution-details border-r3">
    <div class="contribution-content no-txt-overflow padding-5 kill-margin">
      <p><%= contribution.content %></p>
    </div>
    <div class="contribution-voting text-center">
      <%= link_to contribution_upvote_path(contribution) do %>
        <i class="fas fa-sort-up voting-item"></i>
      <% end %>
      <p class="voting-item"><%= contribution.vote_sum %></p>
      <%= link_to contribution_downvote_path(contribution) do %>
        <i class="fas fa-sort-down voting-item"></i>
      <% end %>
    </div>
  </div>
</div>
<% contribution.comments.each do |comment|%>
  <div class="thread-comments classic-card-style-comment padding-t-5">
    <div class="contribution-contributor-comment">
      <div class="contributor-details">
        <p class="contribution-username"><%= comment.user.username %></p>
        <p class="contribution-date"><%= comment.created_at.strftime("%d.%m.%Y") %></p>
      </div>
    </div>
    <div class="contribution-details">
      <div class="contribution-content no-txt-overflow padding-5 kill-margin">
        <p><%= comment.content %></p>
      </div>
      <div class="contribution-voting text-center">
        <%= link_to comment_upvote_path(comment) do %>
        <!-- not sur if I need voting-item but leaving it for now -->
          <i class="fas fa-sort-up voting-item"></i>
        <% end %>
        <p class="voting-item"><%= comment.vote_sum %></p>
        <%= link_to comment_downvote_path(comment) do %>
          <i class="fas fa-sort-down voting-item"></i>
        <% end %>
      </div>
    </div>
  </div>
<% end %>

<% if current_user %>
  <% comment = Comment.new %>
  <%= form_for comment, url: contribution_comments_path(contribution) do |f| %>
  <%= f.label :content, current_user.username%>
  <%= f.text_field :content %>
  <%= f.submit 'Send', method: :post %>
  <% end %>
<% end %>
<br>
