<div class="container text-center">
  <div class="speaker-card">
    <div class="speaker-avt">
      avatar
      flag or sm
    </div>
    <div class="speaker-card-body">
      <div class="speaker-info">
        <h2><%= @speaker.full_name %> (<%= @speaker.date_of_birth.to_date %>)</h2>
        <p>bio <%= @speaker.bio %></p>
        <p><%= @speaker.speeches.all.last.title %></p>
      </div>
      <div class="speaker-stats">
        <div class="speaker-contributions-tot">
          <i class="far fa-comment-alt"></i><%= @speaker.speeches.all.each contributions.all.count %>
        </div>
        <div class="speaker-comments-tot">
          comme 13
        </div>
        <div class="speaker-votes-tot">
          votes11
        </div>
      </div>
    </div>
  </div>
</div>
