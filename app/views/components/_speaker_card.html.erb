<div class="card speaker-card alt margin-t-20">
  <div class="meta">
    <div class="card_image" style="background-image: url(<%= cl_image_path speaker.photo %>)"></div>
  </div>
  <div class="description">
    <h1><%= speaker.full_name %></h1>
    <% speeches_count = speaker.speeches.count %>
    <h2><%= speeches_count %> speech<%= "es" unless speeches_count == 1 %> on speechless</h2>
    <div class="read-more">
      <a href="/speakers/<%= speaker.id %>">Go to profile</a>
    </div>
    <div class="stats">
      <p><i class="far fa-comment-alt"></i> <%= speaker.total_stats[:contributions] %></p>
      <p><i class="far fa-comment"></i> <%= speaker.total_stats[:comments] %></p>
      <p><i class="fas fa-sort voting-item"></i> <%= speaker.total_votes %></p>
    </div>
  </div>
</div>