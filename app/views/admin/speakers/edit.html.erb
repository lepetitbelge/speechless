<div class="text-center">
  <h2>Admin, the speaker!</h2>
</div>

<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">
      <%= simple_form_for @speaker, url: admin_speaker_path(@speaker), method: :patch do |f| %>
        <%= f.input :first_name %>
        <%= f.input :last_name %>
        <%= f.input :date_of_birth, as: :date, html5: true %>
        <%= f.input :date_of_death, as: :date, html5: true %>
        <%= f.input :photo %>
		<%= f.input :photo_cache, as: :hidden %>
        <%= f.submit 'Update', class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>

<%= link_to "Delete", admin_speaker_path(@speaker), method: :delete %>

<div class="text-center">
  <%= link_to 'index', admin_speakers_path, class: 'btn btn-primary' %>
</div>
